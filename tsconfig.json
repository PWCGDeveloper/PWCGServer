{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "build",
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
      },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }